<%- include('partials/login-header') %>
<br><br>
<body style="background-color: aquamarine;">
<div class="container" style="background-color: aquamarine;">
  <div class="card mt-4"  >
    <div class="card-body" style="background-color: rgba(170, 236, 214, 0.495);">
      <h5 class="card-title" style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;"><%= title %></h5>

      <p class="card-text" style="font-style: oblique;"><%=place + " : "+ createdAt+ " by "+author %></p>
      <p class="card-text"><strong style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;";>Topic:</strong> <%= category %></p>
      <p class="card-text"><strong style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;";>Likes:</strong> <%= likeCount %></p>
      <p class="card-text" ><%= content %></p>
      <a href="/like/<%= id %>" class="btn btn-primary" id="likeButton" style="background-color: rgba(47, 82, 74, 0.696)"><%= like %></a>
    </div>
  </div><br>
</div>
</div>

<div class="d-flex justify-content-center mt-3">
<button onclick="goBack()" class="btn btn-primary" style="background-color: rgba(47, 82, 74, 0.696)">Go Back</button>
</div>
<br><br>
</body>

<%- include('partials/footer') %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
  function goBack() {
    window.history.back();
  }
</script>
