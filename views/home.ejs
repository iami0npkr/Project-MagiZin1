<body style="background-color: aquamarine;">
<div class="container mt-5" style="background-color: aquamarine;">
  <div class="row">
    <div class="col-lg-8">
      <h1 style="font-family: Georgia, 'Times New Roman', Times, serif;">Welcome to MagiZin</h1>
      <p>Explore our website to find interesting articles, news, and resources on various topics.</p>

      <!-- About Us Section -->
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4" >
            <div class="card-body" style="background-color: rgba(59, 232, 174, 0.393);">
              <h2 class="card-title" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">About Us</h2>
              <p class="card-text">Learn about our organization and what we do.</p>
              <a href="/about" class="btn btn-primary" style="background-color: rgba(47, 82, 74, 0.696)" >Read More</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Latest Articles Section -->
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4"  >
            <div class="card-body" style="background-color: rgba(59, 232, 174, 0.393);">
              <h2 class="card-title" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Latest Articles</h2>
              <p class="card-text">Discover the most recent articles published on our platform.</p>
              <a href="/articles" class="btn btn-primary" style="background-color: rgba(47, 82, 74, 0.696)">View Articles</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Sections -->
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4" >
            <div class="card-body" style="background-color: rgba(59, 232, 174, 0.393);">
              <h2 class="card-title" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Featured Topics</h2>
              <p class="card-text">Explore our curated collection of articles on popular topics.</p>
              <a href="/topics" class="btn btn-primary" style="background-color: rgba(47, 82, 74, 0.696)">Browse Topics</a>
            </div>
          </div>
        </div>
      </div>
  
   

       
    </div>

    <div class="col-lg-4">
      <!-- Announcement Bar -->
    
      <div class="announcement-bar">
        <% usersWithAnnouncements.reverse().forEach(function(user) { %>
          <% user.announcements.reverse().forEach(function(announcement) { %>
            <div class="card mb-3"  >
              <div class="card-body" style="background-color: rgba(59, 232, 174, 0.393);">
                <p class="card-text" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><%= " '"+announcement.announcement+"' " %></p>
                <p class="card-text" style="font-weight: lighter;font-style: italic; color: rgb(71, 79, 79);"> <%= "   -"+user.fullname +","+announcement.createdAt %></p>
                
                
              </div>
            </div>
          <% }) %>
        <% }) %>
      </div>
    </div>
  </div>
</div>
